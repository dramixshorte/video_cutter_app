<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF6C63FF"
    android:padding="0dp">

    <!-- Title row with action icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="6dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/icon_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_play_white"
            android:contentDescription="حالة" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="رفع الحلقات"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/btn_clean"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            android:src="@drawable/ic_clean_white"
            android:background="@drawable/notif_icon_bg_circle"
            android:contentDescription="تنظيف" />
        <ImageView
            android:id="@+id/btn_pause_resume"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            android:src="@drawable/ic_pause_white"
            android:background="@drawable/notif_icon_bg_circle"
            android:contentDescription="إيقاف مؤقت" />
        <ImageView
            android:id="@+id/btn_minimize"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            android:src="@drawable/ic_minimize_white"
            android:background="@drawable/notif_icon_bg_circle"
            android:contentDescription="تصغير" />
        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            android:src="@drawable/ic_cancel_white"
            android:background="@drawable/notif_icon_bg_circle"
            android:contentDescription="إلغاء" />
    </LinearLayout>

    <!-- استخدمنا marginTop بدلاً من View فاصلة لتفادي أي تضخيم غير مدعوم -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">
        <!-- Overall progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ProgressBar
                android:id="@+id/progress_overall"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:max="100"
                android:indeterminate="true"
                android:progressDrawable="@drawable/notif_progress_bar_simple" />
            <TextView
                android:id="@+id/percent_overall"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0%"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/label_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="إجمالي الرفع"
            android:textSize="11sp"
            android:textColor="#F2EFFF" />
    </LinearLayout>

    <!-- Episode progress -->
    <LinearLayout
        android:id="@+id/episode_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ProgressBar
                android:id="@+id/progress_episode"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:max="100"
                android:indeterminate="true"
                android:progressDrawable="@drawable/notif_progress_bar_simple" />
            <TextView
                android:id="@+id/percent_episode"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0%"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/label_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="الحلقة 0/0"
            android:textSize="11sp"
            android:textColor="#F2EFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingBottom="12dp"
        android:text="جارٍ التحضير..."
        android:textSize="11sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#FFFFFF" />

</LinearLayout>